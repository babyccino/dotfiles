// Zed settings
//
// For information on how to configure Zed, see the Zed // documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.

{
  "gutter": {
    "min_line_number_digits": 1,
    "line_numbers": true
  },
  "active_pane_modifiers": {
    "border_size": 0.0
  },
  "bottom_dock_layout": "contained",
  "preview_tabs": {
    "enabled": false
  },
  "title_bar": {
    "show_menus": false,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_branch_icon": true
  },
  "tab_bar": {
    "show": true
  },
  "toolbar": {
    "agent_review": false,
    "selections_menu": false,
    "quick_actions": false,
    "breadcrumbs": false
  },
  "outline_panel": {
    "button": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "use_system_path_prompts": false,
  "icon_theme": "Zed (Default)",
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "button": false
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred"
  },
  "git": {
    "git_gutter": "tracked_files"
  },
  "tabs": {
    "show_close_button": "hidden",
    "close_position": "right",
    "file_icons": false,
    "git_status": true
  },
  "edit_predictions": {
    "disabled_globs": [".env"],
    "enabled_in_text_threads": false
  },
  "edit_predictions_disabled_in": ["comment", "string"],
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "vim_mode": true,
  "theme": "Gus 1.0",
  "relative_line_numbers": "enabled",
  "ui_font_size": 14,
  "buffer_font_size": 13.0,
  "tab_size": 2,
  "terminal": {
    "font_family": "Menlo",
    "font_size": 13,
    "dock": "right"
  },
  "format_on_save": "on",
  "languages": {
    "Plain Text": {
      "show_edit_predictions": false
    }
  },
  // "languages": {
  //   "Go": {
  //     "formatter": {
  //       "external": {
  //         "command": "gofumpt",
  //         "arguments": ["-extra", "{buffer_path}"]
  //       }
  //     }
  //   }
  // },
  "buffer_font_family": "Hack FC Ligatured",
  "buffer_font_features": {
    "calt": true
  },
  "ui_font_family": "SF Pro",
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  }
}
