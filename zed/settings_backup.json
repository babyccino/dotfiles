// Zed settings
//
// For information on how to configure Zed, see the Zed // documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.

{
  "use_system_path_prompts": false,
  "icon_theme": "Zed (Default)",
  "assistant": {
    "default_profile": "write",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    },
    "version": "2",
    "button": false
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred"
  },
  "git": {
    "git_gutter": "tracked_files"
  },
  "tabs": {
    "git_status": true
  },
  "edit_predictions": {
    "disabled_globs": [".env"],
    "enabled_in_assistant": false
  },
  "edit_predictions_disabled_in": ["comment", "string"],
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "vim_mode": true,
  "theme": "Gus 1.0",
  "relative_line_numbers": true,
  "ui_font_size": 14,
  "buffer_font_size": 13.0,
  "tab_size": 2,
  "terminal": {
    "font_family": "Menlo",
    "font_size": 13,
    "dock": "right"
  },
  "format_on_save": "on",
  // "languages": {
  //   "Go": {
  //     "formatter": {
  //       "external": {
  //         "command": "gofumpt",
  //         "arguments": ["-extra", "{buffer_path}"]
  //       }
  //     }
  //   }
  // },
  "language_overrides": {
    "TypeScript": {
      "show_edit_predictions": false
    },
    "Rust": {
      "tab_size": 4,
      "show_edit_predictions": false
    }
  },
  "buffer_font_family": "Hack FC Ligatured",
  "buffer_font_features": {
    "calt": true
  },
  "ui_font_family": "SF Pro",
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  }
}
